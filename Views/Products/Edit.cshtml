@using BaoTest1.ViewModel;
@model ProductsViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Products</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label col-2">Name</label>
                <input asp-for="ProductRespone.Name" value="@Model.ProductRespone.Name" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label class="control-label col-2">Price</label>
                <input asp-for="ProductRespone.Price" value="@Model.ProductRespone.Price" class="form-control" />
            </div>
            <div>
                <input type="hidden" asp-for="ProductRespone.Id" value="@Model.ProductRespone.Id"/>
                <a asp-action="Index" class="btn btn-secondary">Trở lại</a>
                <button type="submit" class="btn btn-success">Đồng ý</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
